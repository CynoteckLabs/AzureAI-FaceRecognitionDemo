@model Microsoft.ProjectOxford.Face.Contract.PersonGroup
@{
    ViewBag.Title = "Edit person group";
}
<h2>Create person group</h2>
<form method="post" asp-antiforgery="true">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="PersonGroupId" type="hidden" />
        <div class="form-group">
            <label asp-for="Name" class="custom-control-label col-md-2" />
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserData" class="custom-control-label col-md-2"></label>
            <div class="col-md-10">
                <textarea asp-for="UserData" class="form-control"></textarea>
                <span asp-validation-for="UserData" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
